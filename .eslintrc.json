{
  "root": true,
  "extends": ["@eliasgcf/eslint-config-next", "plugin:tailwindcss/recommended"],
  "rules": {
    "jsx-a11y/anchor-is-valid": "off",
    "@next/next/no-img-element": "off",
    "react/button-has-type": [
      "error",
      {
        "button": true,
        "submit": true,
        "reset": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "singleQuote": true,
        "printWidth": 90,
        "trailingComma": "all"
      }
    ]
  }
}
